{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "src/protobuf/**/*.*",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "indent": [
      true,
      "spaces"
    ],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "interface-over-type-literal": false,
    "no-unused-expression": [
      true,
      "allow-tagged-template"
    ]
  },
  "defaultSeverity": "warning"
}
